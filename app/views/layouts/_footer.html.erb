<header>
  <div id=navbar>
    <a href="/landing"><img id="main-logo" src="http://i1344.photobucket.com/albums/p652/meganryll/adderalllogo_zps181258a6.png"></a>
    <div class="nav-butz">
      <small>
        <% if current_user %>
        <%= link_to "Log out", session_path("current"), method: :delete %><%=link_to "Flashcards", profile_path%>
          <%= link_to "Universities", universities_path %>
        <% else %>
        <div id="login" class="form-group">
          <%= form_tag sessions_path(current_user), class: "navbar-form navbar-right" do %>

              <%= text_field_tag :email, nil, class: "form-control", id: "login-email", placeholder: "email"  %>

              <%= password_field_tag :password, nil, class: "form-control", id: "login-password", placeholder: "password"  %>

            <%= submit_tag "Log In", id: "login-button" %>
          <% end %>
        </div>
        <% end %>
      </small>
    </div>
  </div>
  <small>

  </small>
</header>
