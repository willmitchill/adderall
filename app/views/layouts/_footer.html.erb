<header>
  <div id=navbar>
    <a href="/landing"><img id="main-logo" src="http://i1344.photobucket.com/albums/p652/meganryll/adderalllogo_zps181258a6.png"></a>
    <div class="nav-butz">
      <small>
        <% if current_user %>
        Welcome <%=current_user.username %>
        <%= link_to "Log out", session_path("current"), method: :delete %><%=link_to "Flashcards", profile_path%>
          <%= link_to "Universities", universities_path %>
        <% else %>
        <div id="login">
          <%= form_tag sessions_path(current_user) do %>
            <span>
              <%= label_tag "email" %><br/>
              <%= text_field_tag "email" ,"", :required => true %>
            </span>
            <span>
              <%= label_tag :password %><br/>
              <%= password_field_tag :password, "", :required => true  %>
            </span>
            <span><%= submit_tag "Log In" %></span>
          <% end %>
        </div>
        <% end %>
      </small>
    </div>
  </div>
  <small>

  </small>
</header>
