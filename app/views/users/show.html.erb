<body class="dashboard">
<h2> Dashboard </h2>
<section class='col-sm-3' id="flashcard-form">
<section id='cardset-form'>
<h3> make a set of flashcard</h3>

<%= form_for Cardset.new, :url => {:controller => 'cardsets', action: 'create'} do |f| %>
  <div>
    <%= f.label "name" %><br>
    <%= f.text_field :name %>
  </div>
  <div id="set-button">
    <%= f.submit "Submit" %> 
  </div>
  <%end%>
</section>

<div class="flashcard-form">
<h3> create a flashcard</h3>
<%= form_for(Flashcard.new, url: url_for(controller: 'flashcards', action: 'create')) do |f| %>
  <div>
    <%= f.label "title" %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label "content" %><br>
    <%= f.text_field :content %>
  </div>
  <div>
    <%= f.submit "Submit" %> 
  </div>
  <%end%>
  </div>
</section>


<div class="col-sm-6" id="card-3456">

<!-- question card -->
 
  <% current_user.flashcards.each do |card|%>
  <div class="cards">
  <div class="card-1 card active"> 

  <%= card.title %>
  </div><br>

<!-- answer card -->

 <div class="card-2 card">
  <%= card.content %>
 
  </div>
  </div>
  <%end%>
  </div><br>

  <div class = "cardset">
  <h3> Here are your flashcard sets</h3>
  <% current_user.cardsets.each do |set| %>
  <%= set.name %>
  <%end%>
  </div>
  


</div>













</body>

